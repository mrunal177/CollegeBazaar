# CampusBazaar - Environment Variables
# Copy to .env and fill in your values

# ─── Algorand Node (use Algonode free tier for hackathon) ────────────────────
ALGOD_ADDRESS=https://testnet-api.algonode.cloud
ALGOD_TOKEN=
INDEXER_ADDRESS=https://testnet-idx.algonode.cloud
INDEXER_TOKEN=

# ─── Deployed App IDs (fill after deployment) ────────────────────────────────
ECOPOINTS_APP_ID=0

# ─── Platform Admin (NEVER commit the real mnemonic) ─────────────────────────
ADMIN_MNEMONIC=word1 word2 word3 ... word25
PLATFORM_FEE_ADDRESS=YOUR_ALGORAND_FEE_ADDRESS

# ─── JWT Auth ────────────────────────────────────────────────────────────────
JWT_SECRET=replace-with-a-strong-random-secret-at-least-32-chars

# ─── College Email Domains (comma-separated) ─────────────────────────────────
ALLOWED_COLLEGE_DOMAINS=iitbombay.ac.in,bits-pilani.ac.in,nit.ac.in

# ─── Production Database (replace in-memory dict) ───────────────────────────
DATABASE_URL=postgresql://user:pass@localhost:5432/campusbazaar
